
<p>
<strong>Title:</strong>
<%= @post.title %>
</p>
 <% if !@post.tag_list.blank? %>
    <h5 class="tag-list">Tags: <% @post.tag_list.each do |tag| %>
        <%= link_to tag, controller: :image_posts, tag: tag %>
        <% end %>
    </h5>
<% end %>
<%= image_tag(@post.image,width: 400) %>
<br/>
<%= link_to("View all images", image_posts_path) %>
